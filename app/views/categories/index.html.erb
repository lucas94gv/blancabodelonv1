<div clas="container">

  <div class="columns">
    <div class="column has-text-centered has-text-weight-bold">
      <span class="is-size-1">CATEGORÍAS</span>
    </div>
  </div>  

  <div class="columns is-justify-content-center">
    <div class="column is-two-thirds has-text-right">
      <%= link_to 'Nueva categoría', new_category_path, class: "button is-success" %>
    </div>
  </div>

  <div class="columns is-justify-content-center">
    <div class="column is-two-thirds">
      <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Posición</th>
            <th colspan="2">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.position %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>