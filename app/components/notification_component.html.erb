<div class="notifications__item <%= type %>" data-controller="notification" data-turbo-cache="false">
  <div class="icon is-large">
    <%= icon %>
  </div>
  <div>
    <p class="notifications__item-content has-text-weight-semibold"><%= data[:title] %></p>
    <% if data[:body].present? %>
      <p class="notifications__item-content"><%= data[:body] %></p>
    <% end %>
  </div>
  <div class="icon is-large">
    <svg data-action="click->notification#close" xmlns="http://www.w3.org/2000/svg" class="notifications__item-close" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </div>
</div>