<div class="columns level-right is-multiline" data-controller="drag" data-drag-url="/categories/:id/move">
    <% @category.subcategories.each do |cat_child| %>
        <div class="column box has-background-light mb-5 is-11" data-id="<%= cat_child.id %>">
            <div class="columns">
                <div class="column">
                    <%= image_tag("icons/hand-move.svg", size: "20x20", class: "handle") %>
                    <span class="is-size-5"><%= cat_child.name %></span>
                </div>
                <div class="column has-text-right">
                    <%= link_to image_tag("icons/icon-edit.svg", size: "20x20"), edit_category_path(cat_child) %>
                    <%= link_to image_tag("icons/icon-delete.svg", size: "20x20"), cat_child, method: :delete, data: { confirm: '¿Estás seguro?' } %>
                </div>
            </div>
        </div>
    <% end %>
</div>